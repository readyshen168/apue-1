{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build APUE Program (clang)",
      "type": "shell",
      "command": "clang",
      "args": [
        "-g", // 生成调试信息
        "-Wall", // 开启所有警告
        "-Wextra", // 更多警告
        "-std=c17", // C标准 (按需调整)
        "-I../include/", //头文件
        //"-I/Users/ready/Downloads/apue.3e/include",
        "-L../lib", // 编译l时需链接APUE库libapue.a
        "-lapue",
        "-o", // 指定输出文件名
        "${fileDirname}/${fileBasenameNoExtension}", // 输出路径
        "${file}" // 要编译的源文件
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "options": {
        "cwd": "${fileDirname}" // 设置工作目录为当前源文件的所在目录
      },
      "problemMatcher": "$gcc"
    }
  ]
}
